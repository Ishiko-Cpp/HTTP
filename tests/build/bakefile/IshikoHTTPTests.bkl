ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/http/include/Ishiko/HTTP.bkl;
import $(ishikopath)/test-framework/include/Ishiko/Tests.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/IshikoHTTPTests.sln;
vs2017.solutionfile = ../vc15/IshikoHTTPTests.sln;
vs2015.solutionfile = ../vc14/IshikoHTTPTests.sln;
vs2013.solutionfile = ../vc12/IshikoHTTPTests.sln;

program IshikoHTTPTests : IshikoHTTP, IshikoTests
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoHTTP IshikoNetworking IshikoTestsCore IshikoDiff IshikoFileSystem IshikoProcess IshikoText IshikoTypes IshikoErrors boost_program_options boost_filesystem;
    }

    headers
    {
        ../../src/HTTPClientTests.hpp
        ../../src/HTTPHeaderTests.hpp
        ../../src/HTTPMessagePushParserTests.hpp
        ../../src/HTTPRequestTests.hpp
        ../../src/HTTPResponseTests.hpp
        ../../src/helpers/HTTPMessagePushParserTestCallbacks.hpp
    }

    sources
    {
        ../../src/HTTPClientTests.cpp
        ../../src/HTTPHeaderTests.cpp
        ../../src/HTTPMessagePushParserTests.cpp
        ../../src/HTTPRequestTests.cpp
        ../../src/HTTPResponseTests.cpp
        ../../src/main.cpp
        ../../src/helpers/HTTPMessagePushParserTestCallbacks.cpp
    }
}
